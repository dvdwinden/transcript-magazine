<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% if title %}{{ title }} Â· TRANSCRIPT Magazine{% else %}TRANSCRIPT Magazine{% endif %}</title>
    <meta name="description" content="{{ description or 'TRANSCRIPT Magazine' }}">
    <link rel="stylesheet" href="/css/style.css">
</head>
<body class="font-serif">
    <main class="container" role="main">
        {{ content | safe }}
    </main>
    <div class="lightbox" id="lightbox">
        <div class="photo-placeholder" style="width: 800px; height: 600px;"></div>
    </div>
    <script>
        const lightbox = document.getElementById('lightbox');
        const photoPlaceholders = document.querySelectorAll('.photo-placeholder');
        
        photoPlaceholders.forEach(photo => {
            if (photo.parentElement.id !== 'lightbox') {
                photo.addEventListener('click', (e) => {
                    e.stopPropagation();
                    lightbox.classList.add('active');
                });
            }
        });
        
        lightbox.addEventListener('click', () => {
            lightbox.classList.remove('active');
        });
    </script>
</body>
</html>
